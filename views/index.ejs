<div class="author">
    <h1 class="author_heading">Hi, I am Prateek.</h1>
    <p class="author_body"> Full Stack Developer</p>
</div>

<img src="/img/hero-image.jpg" alt="person looking at the mirror holding a phone" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading"> Latest Posts</h2>

    <ul class="article-ul">
        <% posts.forEach(post => { %>
            <li>
                <a href="/posts/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list_date"><%= post.createdAt.toDateString() %></span>
                </a> 
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>
